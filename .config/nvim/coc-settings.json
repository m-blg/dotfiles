{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c", "cpp", "cc", "h", "hpp", "hh"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
